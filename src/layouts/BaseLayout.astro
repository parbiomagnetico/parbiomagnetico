---
import "../styles/global.scss";

import { ClientRouter } from "astro:transitions";
import WhatsAppButton from "../components/WhatsAppButton.astro";

import SEO from "../components/SEO.astro";

interface Props {
	title: string;
	description?: string;
	image?: string;
	canonical?: string;
}

const {
	title,
	description = "Recalibración del campo bioenergético humano. Terapia de Par Biomagnético para el equilibrio y bienestar integral.",
	image,
	canonical,
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<ClientRouter />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Outfit:wght@300;400;600&display=swap"
			rel="stylesheet"
		/>

		<SEO {title} {description} {image} {canonical} />
	</head>
	<body>
		<WhatsAppButton />
		<slot />

		<script>
			// Dynamic scrollbar color: Emerald → Gold based on scroll position
			function updateScrollbarColor() {
				const scrollTop = window.scrollY;
				const docHeight =
					document.documentElement.scrollHeight - window.innerHeight;
				const scrollPercent = docHeight > 0 ? scrollTop / docHeight : 0;

				// Interpolate between emerald (#10b981) and amber (#ffb347)
				const r = Math.round(16 + (255 - 16) * scrollPercent);
				const g = Math.round(185 + (179 - 185) * scrollPercent);
				const b = Math.round(129 + (71 - 129) * scrollPercent);

				document.documentElement.style.setProperty(
					"--scrollbar-color",
					`rgb(${r}, ${g}, ${b})`,
				);
			}

			// Only apply on desktop
			if (window.innerWidth >= 769) {
				window.addEventListener("scroll", updateScrollbarColor, {
					passive: true,
				});
				updateScrollbarColor(); // Initial
			}
		</script>
	</body>
</html>
