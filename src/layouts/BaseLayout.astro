---
import "../styles/global.scss";

import { ClientRouter } from "astro:transitions";
import WhatsAppButton from "../components/WhatsAppButton.astro";

import SEO from "../components/SEO.astro";

interface Props {
	title: string;
	description?: string;
	image?: string;
	canonical?: string;
}

const {
	title,
	description = "Recalibración del campo bioenergético humano. Terapia de Par Biomagnético para el equilibrio y bienestar integral.",
	image,
	canonical,
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<meta name="generator" content={Astro.generator} />
		<ClientRouter />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Outfit:wght@300;400;600&display=swap"
			rel="stylesheet"
		/>

		<SEO {title} {description} {image} {canonical} />
	</head>
	<body>
		<WhatsAppButton />
		<slot />
	</body>
</html>
