---
import { Picture } from "astro:assets";
import bokehBg from "../assets/images/composition/bokeh_bg.png";
import humanImg from "../assets/images/composition/image_13.png";
import ringBase from "../assets/images/composition/ring_base.png";
import ringChaos from "../assets/images/composition/ring_chaos.jpg";
import handsImg from "../assets/images/composition/hands_transparent.png";

// Energy Composition Component - Diseño Final Corregido
// Todas las imágenes aplican blend mode directamente contra el fondo bokeh
---

<section class="hero-composition">
  <!-- Fondo bokeh orgánico -->
  <Picture
    src={bokehBg}
    formats={["avif", "webp"]}
    widths={[720, 1280, 1920]}
    sizes="100vw"
    alt="Fondo de energía biomagnética"
    class="bokeh-bg"
    loading="eager"
    fetchpriority="high"
  />

  <!-- Overlay para legibilidad del texto -->
  <div class="text-overlay"></div>

  <!-- Humano de partículas - blend directamente contra bokeh -->
  <Picture
    src={humanImg}
    formats={["avif", "webp"]}
    widths={[480, 800, 1200]}
    sizes="(max-width: 768px) 100vw, 50vw"
    alt="Silueta humana recibiendo terapia de par biomagnético"
    class="layer-human"
    loading="eager"
    fetchpriority="high"
  />

  <!-- Destellos sobre el humano -->
  <div class="sparkles">
    <span class="sparkle"></span>
    <span class="sparkle"></span>
    <span class="sparkle"></span>
    <span class="sparkle"></span>
    <span class="sparkle"></span>
    <span class="sparkle"></span>
    <span class="sparkle"></span>
    <span class="sparkle"></span>
  </div>

  <!-- Anillo de energía - Técnica de interferencia Moíré -->
  <!-- Capa Base: Rotación horaria lenta -->
  <Picture
    src={ringBase}
    formats={["avif", "webp"]}
    widths={[200, 400]}
    sizes="(max-width: 768px) 80vw, 25vw"
    alt="Anillo de resonancia magnética base"
    class="ring-layer ring-base"
    loading="eager"
  />
  <!-- Capa de Caos: Rotación antihoraria + respiración -->
  <Picture
    src={ringChaos}
    formats={["avif", "webp"]}
    widths={[200, 400]}
    sizes="(max-width: 768px) 80vw, 25vw"
    alt="Campo de energía en movimiento"
    class="ring-layer ring-chaos"
    loading="eager"
  />

  <!-- Manos con orbes (imagen transparente, por encima de todo) -->
  <Picture
    src={handsImg}
    formats={["avif", "webp"]}
    widths={[400, 800]}
    sizes="(max-width: 768px) 100vw, 45vw"
    alt="Manos de terapeuta de par biomagnético realizando rastreo"
    class="layer-hands"
    loading="eager"
  />

  <!-- Contenido de texto -->
  <div class="text-content">
    <span class="hero-badge">Bienestar y Equilibrio</span>
    <h1 class="main-title">
      Sana tu cuerpo,<br />
      recupera tu armonía
    </h1>
    <p class="subtitle">
      Especialista en Par Biomagnético. Acompañamos tu proceso de sanación
      integral, ya sea desde nuestra consulta en Monzón o mediante sesiones a
      distancia.
    </p>
  </div>
</section>

<style>
  .hero-composition {
    position: relative;
    width: 100%;
    min-height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding-top: 120px;
    background: #1a1a1a;
  }

  /* Fondo bokeh - capa base */
  .bokeh-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  /* Overlay para texto (más fuerte a la izquierda) */
  .text-overlay {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.3) 30%,
      transparent 70%
    );
    z-index: 2;
  }

  /* Humano de partículas - desde arriba del todo */
  .layer-human {
    position: absolute;
    right: 0;
    top: -5%;
    height: 110%;
    width: auto;
    object-fit: contain;
    object-position: top center;
    z-index: 3;
    mix-blend-mode: screen;
  }

  /* Anillos de energía - posicionados directamente */
  .ring-layer {
    position: absolute;
    right: 22%;
    top: 48%;
    width: 22%;
    height: auto;
    object-fit: contain;
    z-index: 3;
    mix-blend-mode: screen;
  }

  /* Capa Base - Rotación horaria lenta */
  .ring-base {
    animation: rotateClockwise 30s linear infinite;
  }

  /* Capa de Caos - Rotación antihoraria + respiración */
  .ring-chaos {
    opacity: 0.8;
    animation:
      rotateCounterClockwise 20s linear infinite,
      breathe 4s ease-in-out infinite;
  }

  @keyframes rotateClockwise {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes rotateCounterClockwise {
    from {
      transform: rotate(0deg) scale(1);
    }
    to {
      transform: rotate(-360deg) scale(1);
    }
  }

  @keyframes breathe {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* Manos con orbes - por encima de los anillos, sin blend mode */
  /* Manos con orbes - imagen transparente, por encima de todo */
  .layer-hands {
    position: absolute;
    right: 7%;
    bottom: -1%;
    width: 45%;
    height: auto;
    object-fit: contain;
    z-index: 10;
    transform-origin: bottom center;
    animation: floatingHands 8s ease-in-out infinite;
  }

  /* Destellos aleatorios sobre el humano */
  .sparkles {
    position: absolute;
    right: 5%;
    top: 5%;
    height: 90%;
    width: 45%;
    z-index: 6;
    pointer-events: none;
  }

  .sparkle {
    position: absolute;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    box-shadow:
      0 0 8px 2px rgba(255, 255, 255, 0.8),
      0 0 15px 3px rgba(255, 255, 200, 0.6);
    animation: sparkle 2.5s ease-in-out infinite;
  }

  /* Posiciones aleatorias para cada destello */
  .sparkle:nth-child(1) {
    top: 25%;
    left: 42%;
    animation-delay: 0s;
  }
  .sparkle:nth-child(2) {
    top: 35%;
    left: 52%;
    animation-delay: 0.3s;
    width: 4px;
    height: 4px;
  }
  .sparkle:nth-child(3) {
    top: 48%;
    left: 38%;
    animation-delay: 0.8s;
    width: 6px;
    height: 6px;
  }
  .sparkle:nth-child(4) {
    top: 55%;
    left: 48%;
    animation-delay: 1.2s;
  }
  .sparkle:nth-child(5) {
    top: 65%;
    left: 44%;
    animation-delay: 1.6s;
    width: 4px;
    height: 4px;
  }
  .sparkle:nth-child(6) {
    top: 30%;
    left: 58%;
    animation-delay: 2s;
  }
  .sparkle:nth-child(7) {
    top: 42%;
    left: 35%;
    animation-delay: 0.5s;
    width: 5px;
    height: 5px;
  }
  .sparkle:nth-child(8) {
    top: 60%;
    left: 54%;
    animation-delay: 1.8s;
    width: 4px;
    height: 4px;
  }

  @keyframes sparkle {
    0%,
    100% {
      opacity: 0.2;
      transform: scale(0.6);
    }
    50% {
      opacity: 1;
      transform: scale(1.3);
    }
  }

  @keyframes floatingHands {
    0%,
    100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(1.5deg);
    }
    75% {
      transform: rotate(-1.5deg);
    }
  }

  /* Texto alineado a la izquierda para no tapar visual */
  .text-content {
    position: relative;
    z-index: 10;
    padding: 0 5rem;
    max-width: 650px;
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .hero-badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: #4ade80;
    background: rgba(74, 222, 128, 0.1);
    padding: 0.5rem 1.25rem;
    border-radius: 2rem;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(74, 222, 128, 0.2);
  }

  .main-title {
    font-family: "Playfair Display", Georgia, serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    font-style: italic;
    line-height: 1.1;
    color: #d4a853;
    text-shadow:
      0 2px 20px rgba(0, 0, 0, 0.5),
      0 0 20px rgba(212, 168, 83, 0.3);
    margin-bottom: 1.5rem;
    animation: title-glow 4s ease-in-out infinite alternate;
  }

  @keyframes title-glow {
    from {
      text-shadow:
        0 2px 20px rgba(0, 0, 0, 0.5),
        0 0 20px rgba(212, 168, 83, 0.3),
        0 0 40px rgba(212, 168, 83, 0.15);
    }
    to {
      text-shadow:
        0 2px 20px rgba(0, 0, 0, 0.5),
        0 0 25px rgba(212, 168, 83, 0.4),
        0 0 50px rgba(212, 168, 83, 0.2),
        0 0 70px rgba(212, 168, 83, 0.1);
    }
  }

  .title-line {
    display: block;
  }

  .subtitle {
    font-size: clamp(0.95rem, 1.3vw, 1.15rem);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.6;
    font-weight: 300;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.5);
  }

  /* Logo */
  .logo {
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    z-index: 20;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-img {
    height: 50px;
    width: auto;
  }

  .logo-text {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.15rem;
    font-weight: 500;
    color: #d4a853;
    letter-spacing: 0.02em;
  }

  /* Responsivo */
  @media (max-width: 1024px) {
    .text-content {
      max-width: 60%;
      padding: 0 2rem;
    }

    .layer-human {
      right: -5%;
      top: 30%; /* Bajado al 30% */
      height: 75%;
    }

    .ring-layer {
      right: 18%; /* Movidos un pelín a la izquierda */
      width: 28%;
    }

    .layer-hands {
      right: 3%;
      bottom: 30%;
      width: 50%;
    }
  }

  @media (max-width: 768px) {
    .hero-composition {
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding-top: 90px;
      min-height: 100vh;
    }

    .text-content {
      max-width: 100%;
      text-align: center;
      padding: 0 1.5rem;
      position: relative;
      z-index: 15;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .hero-badge {
      margin-bottom: 1rem;
    }

    .main-title {
      font-size: clamp(2rem, 5vw, 3.5rem);
      margin-bottom: 1rem;
      font-weight: 400;
      text-shadow:
        0 0 20px rgba(212, 168, 83, 0.3),
        0 0 40px rgba(212, 168, 83, 0.15);
      line-height: 1.2;
    }

    .subtitle {
      font-size: 1.05rem;
      color: rgba(255, 255, 255, 0.8);
      text-shadow: 0 1px 10px rgba(0, 0, 0, 0.8);
      line-height: 1.5;
      max-width: 280px;
    }

    .text-overlay {
      width: 100%;
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.8) 0%,
        rgba(0, 0, 0, 0.4) 30%,
        transparent 60%,
        rgba(0, 0, 0, 0.8) 100%
      );
    }

    /* Reposicionamiento total de visuales móviles (TAMAÑO MAXIMIZADO) */
    .layer-human {
      position: absolute;
      left: 50%;
      right: auto;
      top: 85%;
      transform: translateX(-80%) scale(2.5);
      height: 60vh;
      width: auto;
      z-index: 5;
    }

    .ring-layer {
      position: absolute;
      left: 8%; /* Ajustado a 8% */
      right: auto;
      top: auto;
      bottom: 0%; /* Bajados al 0% */
      width: 85%;
      z-index: 4;
    }

    .layer-hands {
      position: absolute;
      left: -8%; /* Movido un pelín más a la izquierda */
      right: auto;
      bottom: -0.5%; /* Ajustado a -0.5% */
      transform: none;
      width: 140%;
      max-width: none;
      z-index: 10;
    }

    .sparkles {
      left: 0;
      top: 40%; /* Bajados de 25% a 40% */
      width: 100%;
      height: 50%;
    }
  }
</style>
