---
import { Image } from "astro:assets";
import logoNR from "../assets/images/logo-NRstudio-blanco.webp";
---

<footer class="site-footer">
    <div class="footer-content">
        <div class="footer-brand">
            <Image
                src={logoNR}
                alt="NRstudio Logo"
                width={120}
                height={40}
                class="footer-logo-img"
            />
        </div>
        <p class="footer-text">
            © {new Date().getFullYear()} Par Biomagnético - Equilibrio y Bienestar.
            <br />
            <a
                href="/aviso-legal"
                class="footer-link-legal"
                title="Leer el Aviso Legal">Aviso Legal</a
            > | <a
                href="/politica-privacidad"
                class="footer-link-legal"
                title="Leer la Política de Privacidad">Política de Privacidad</a
            >
        </p>

        <div class="footer-nav">
            <a href="/" class="footer-link" title="Ir a la página de Inicio"
                >Inicio</a
            >
            <span class="separator">•</span>
            <a
                href="/tratamientos"
                class="footer-link"
                title="Consultar Tratamientos">Tratamientos</a
            >
            <span class="separator">•</span>
            <a href="/sobre-mi" class="footer-link" title="Conocer a Cristina"
                >Sobre Mí</a
            >
            <span class="separator">•</span>
            <a href="/blog" class="footer-link" title="Leer nuestro Blog"
                >Blog</a
            >
            <span class="separator">•</span>
            <a
                href="/opiniones"
                class="footer-link"
                title="Ver Opiniones de clientes">Opiniones</a
            >
            <span class="separator">•</span>
            <a href="/faq" class="footer-link" title="Ver Preguntas Frecuentes"
                >FAQ</a
            >
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background: #0a0c0b;
        border-top: 1px solid rgba(212, 168, 83, 0.1);
        padding: 3rem 0;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        align-items: center;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .footer-logo-img {
        width: auto;
        height: 32px;
        object-fit: contain;
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

    .footer-logo-img:hover {
        opacity: 1;
    }

    .footer-text {
        font-size: 0.8rem;
        color: #d1d5db; /* Solid light gray (Tailwind gray-300 approx) */
        line-height: 1.6;
    }

    .footer-nav {
        display: flex;
        gap: 1rem;
        align-items: center;
        margin-top: 0.5rem;
    }

    .footer-link {
        font-size: 0.8rem;
        color: #d4a853;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-link:hover {
        color: #e8c278;
        text-decoration: underline;
    }

    .footer-link-legal {
        color: #e5e5e5; /* Solid very light gray */
        text-decoration: none;
        font-size: 0.75rem;
        transition: color 0.3s ease;
    }

    .footer-link-legal:hover {
        color: #d4a853;
    }

    .separator {
        color: rgba(255, 255, 255, 0.2);
        font-size: 0.7rem;
    }
</style>
