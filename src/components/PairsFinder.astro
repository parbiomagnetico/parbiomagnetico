---
import pairs from "../data/pairs.json";
import BodyVisualizer from "./BodyVisualizer.astro";

// Extract unique types for filter buttons
const types = [...new Set(pairs.map((p) => p.type))].sort();
---

<div class="pairs-finder">
    <!-- Controls Section -->
    <div class="controls">
        <!-- Search Bar -->
        <div class="search-container">
            <div class="search-icon">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
                    ></path>
                </svg>
            </div>
            <input
                type="text"
                id="pair-search"
                placeholder="Buscar por patología, punto o tipo..."
                class="search-input"
                autocomplete="off"
            />
        </div>

        <!-- Filters -->
        <div class="filters-container">
            <button class="filter-btn active" data-filter="all">Todos</button>
            {
                types.map((type) => (
                    <button class="filter-btn" data-filter={type}>
                        {type}
                    </button>
                ))
            }
        </div>
    </div>

    <!-- Results Grid -->
    <div class="pairs-grid" id="pairs-grid">
        {
            pairs.map((pair) => (
                <article
                    class="pair-card"
                    data-type={pair.type}
                    data-search={`${pair.point_a} ${pair.point_b} ${pair.pathology} ${pair.type} ${pair.description}`.toLowerCase()}
                >
                    <div class="card-header">
                        <span class="pair-type">{pair.type}</span>
                        <span class="pair-id">#{pair.id}</span>
                    </div>
                    <h3 class="pair-points">
                        <span class="point">{pair.point_a}</span>
                        <span class="connector">—</span>
                        <span class="point">{pair.point_b}</span>
                    </h3>
                    <div class="pair-body">
                        <h4 class="pathology">{pair.pathology}</h4>
                        <p class="description">{pair.description}</p>
                    </div>

                    <button
                        class="view-map-btn"
                        data-point-a={pair.point_a}
                        data-point-b={pair.point_b}
                        data-pathology={pair.pathology}
                        data-type={pair.type}
                    >
                        Ver Ubicación
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <>
                                <circle cx="12" cy="12" r="10" />
                                <path d="M12 16v-4" />
                                <path d="M12 8h.01" />
                            </>
                        </svg>
                    </button>
                </article>
            ))
        }
    </div>

    <div id="no-results" class="no-results hidden">
        <p>No hemos encontrado pares que coincidan con tu búsqueda.</p>
    </div>

    <BodyVisualizer />
</div>

<style>
    .pairs-finder {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Controls */
    .controls {
        margin-bottom: 3rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        align-items: center;
    }

    .search-container {
        position: relative;
        width: 100%;
        max-width: 600px;
    }

    .search-icon {
        position: absolute;
        left: 1.25rem;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255, 255, 255, 0.4);
        width: 1.25rem;
        height: 1.25rem;
        pointer-events: none;
    }

    .search-input {
        width: 100%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 2rem;
        padding: 1rem 1rem 1rem 3.5rem;
        color: #fff;
        font-size: 1.1rem;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #d4a853;
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 20px rgba(212, 168, 83, 0.1);
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.3);
    }

    .filters-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.75rem;
    }

    .filter-btn {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.7);
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: capitalize;
    }

    .filter-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .filter-btn.active {
        background: rgba(212, 168, 83, 0.2);
        border-color: #d4a853;
        color: #d4a853;
    }

    /* Grid */
    .pairs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .pair-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .pair-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(212, 168, 83, 0.3);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .pair-card.hidden {
        display: none;
    }

    /* Visualizer Button */
    .view-map-btn {
        width: 100%;
        margin-top: 1rem;
        padding: 0.75rem;
        background: rgba(212, 168, 83, 0.1);
        border: 1px solid rgba(212, 168, 83, 0.3);
        border-radius: 0.5rem;
        color: #d4a853;
        cursor: pointer;
        font-size: 0.9rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .view-map-btn:hover {
        background: #d4a853;
        color: #0f1f1a;
    }

    /* Card Content */
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .pair-type {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        background: rgba(74, 222, 128, 0.1);
        color: #4ade80;
        border: 1px solid rgba(74, 222, 128, 0.2);
    }

    .pair-card[data-type="Virus"] .pair-type {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border-color: rgba(239, 68, 68, 0.2);
    }
    .pair-card[data-type="Bacteria"] .pair-type {
        background: rgba(249, 115, 22, 0.1);
        color: #f97316;
        border-color: rgba(249, 115, 22, 0.2);
    }
    .pair-card[data-type="Emocional"] .pair-type {
        background: rgba(168, 85, 247, 0.1);
        color: #a855f7;
        border-color: rgba(168, 85, 247, 0.2);
    }

    .pair-id {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.3);
    }

    .pair-points {
        font-family: "Playfair Display", serif;
        font-size: 1.25rem;
        color: #d4a853;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .connector {
        color: rgba(255, 255, 255, 0.3);
    }

    .pathology {
        font-size: 1rem;
        color: #fff;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .description {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.5;
    }

    .no-results {
        text-align: center;
        padding: 3rem;
        color: rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.02);
        border-radius: 1rem;
    }

    .no-results.hidden {
        display: none;
    }
</style>

<script>
    // Client-side filtering logic
    function initPairsFinder() {
        const searchInput = document.getElementById("pair-search");
        const filterBtns = document.querySelectorAll(".filter-btn");
        const cards = document.querySelectorAll(".pair-card");
        const noResults = document.getElementById("no-results");

        let currentFilter = "all";
        let currentSearch = "";

        function filterCards() {
            let visibleCount = 0;

            cards.forEach((card) => {
                if (!(card instanceof HTMLElement)) return;

                const type = card.getAttribute("data-type");
                const searchText = card.getAttribute("data-search") || "";

                const matchesType =
                    currentFilter === "all" || type === currentFilter;
                const matchesSearch = searchText.includes(currentSearch);

                if (matchesType && matchesSearch) {
                    card.classList.remove("hidden");
                    card.style.animation = "fadeIn 0.3s ease forwards";
                    visibleCount++;
                } else {
                    card.classList.add("hidden");
                }
            });

            if (noResults) {
                if (visibleCount === 0) {
                    noResults.classList.remove("hidden");
                } else {
                    noResults.classList.add("hidden");
                }
            }
        }

        // Event Listeners
        searchInput?.addEventListener("input", (e) => {
            const target = e.target as HTMLInputElement;
            currentSearch = target.value.toLowerCase().trim();
            filterCards();
        });

        filterBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                filterBtns.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");

                currentFilter = btn.getAttribute("data-filter") || "all";
                filterCards();
            });
        });

        // Visualizer Buttons
        const viewBtns = document.querySelectorAll(".view-map-btn");
        viewBtns.forEach((btn) => {
            btn.addEventListener("click", (e) => {
                e.stopPropagation();
                const detail = {
                    pointA: btn.getAttribute("data-point-a"),
                    pointB: btn.getAttribute("data-point-b"),
                    pathology: btn.getAttribute("data-pathology"),
                    type: btn.getAttribute("data-type"),
                };

                document.dispatchEvent(
                    new CustomEvent("open-visualizer", { detail }),
                );
            });
        });
    }

    // Init on load
    initPairsFinder();

    // Re-init on astro page swap (if ViewTransitions used)
    document.addEventListener("astro:page-load", initPairsFinder);
</script>
