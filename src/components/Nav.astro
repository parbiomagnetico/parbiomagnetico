---
// Nav.astro - Componente de navegación con nuevo logo
import { Picture } from "astro:assets";
import logoImg from "../assets/images/logo.png";

interface Props {
  currentPage?: string;
}

const { currentPage = "" } = Astro.props;
---

<nav class="site-nav">
  <a href="/" class="logo">
    <Picture
      src={logoImg}
      formats={["avif", "webp"]}
      widths={[90, 180]}
      sizes="90px"
      alt="Logotipo Par Biomagnético - NR Studio"
      class="logo-img"
      loading="eager"
      fetchpriority="high"
    />
  </a>

  <!-- Hamburger button for mobile -->
  <button class="nav-toggle" aria-label="Abrir menú" aria-expanded="false">
    <span class="hamburger"></span>
  </button>

  <div class="nav-links">
    <a href="/" class:list={["nav-link", { active: currentPage === "inicio" }]}
      >Inicio</a
    >
    <a
      href="/tratamientos"
      class:list={["nav-link", { active: currentPage === "tratamientos" }]}
      >Tratamientos</a
    >
    <a
      href="/como-funciona"
      class:list={["nav-link", { active: currentPage === "como-funciona" }]}
      >¿Cómo Funciona?</a
    >
    <a
      href="/sobre-mi"
      class:list={["nav-link", { active: currentPage === "sobre-mi" }]}
      >Sobre Mí</a
    >
    <a
      href="/blog"
      class:list={["nav-link", { active: currentPage === "blog" }]}>Blog</a
    >
    <a
      href="/opiniones"
      class:list={["nav-link", { active: currentPage === "opiniones" }]}
      >Opiniones</a
    >
  </div>
</nav>

<script>
  // Mobile menu toggle
  const toggle = document.querySelector(".nav-toggle");
  const navLinks = document.querySelector(".nav-links");
  const nav = document.querySelector(".site-nav");

  if (toggle && navLinks) {
    toggle.addEventListener("click", () => {
      const isOpen = navLinks.classList.toggle("open");
      toggle.classList.toggle("open");
      toggle.setAttribute("aria-expanded", String(isOpen));

      // Prevenir scroll cuando el menú está abierto
      document.body.style.overflow = isOpen ? "hidden" : "";
    });
  }

  // Header scroll effect
  window.addEventListener("scroll", () => {
    if (nav) {
      if (window.scrollY > 50) {
        nav.classList.add("scrolled");
      } else {
        nav.classList.remove("scrolled");
      }
    }
  });
</script>

<style>
  .site-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem var(--nav-px, 2.5rem);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    --nav-px: 2.5rem;
  }

  .site-nav.scrolled {
    padding: 0.75rem var(--nav-px, 2.5rem);
    background: rgba(10, 12, 11, 0.85);
    backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(212, 168, 83, 0.2);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-img {
    height: 45px;
    width: auto;
  }

  .logo-text {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: #d4a853;
    letter-spacing: 0.02em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    transition: color 0.3s ease;
    padding-bottom: 4px;
    border-bottom: 1px solid transparent;
  }

  .nav-link:hover {
    color: #fff;
  }

  .nav-link.active {
    color: #fff;
    border-bottom-color: #4ade80;
  }

  /* Hamburger button */
  .nav-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 1rem;
    margin-right: -1rem; /* Compensa el padding para alinear visualmente */
    z-index: 1300;
    -webkit-tap-highlight-color: transparent;
  }

  .hamburger {
    display: block;
    width: 24px;
    height: 2px;
    background: #fff;
    position: relative;
    transition: background 0.3s ease;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    left: 0;
    width: 24px;
    height: 2px;
    background: #fff;
    transition: transform 0.3s ease;
  }

  .hamburger::before {
    top: -7px;
  }

  .hamburger::after {
    top: 7px;
  }

  .nav-toggle.open .hamburger {
    background: transparent;
  }

  .nav-toggle.open .hamburger::before {
    transform: translateY(7px) rotate(45deg);
  }

  .nav-toggle.open .hamburger::after {
    transform: translateY(-7px) rotate(-45deg);
  }

  @media (max-width: 768px) {
    .site-nav {
      --nav-px: 1.25rem;
      padding: 0.75rem var(--nav-px);
    }

    .logo-img {
      height: 35px;
    }

    .nav-toggle {
      display: block;
    }

    .nav-links {
      position: fixed;
      top: 0;
      right: 0;
      width: 70%;
      max-width: 280px;
      height: 100vh;
      background: rgba(10, 12, 11, 0.98);
      backdrop-filter: blur(15px);
      flex-direction: column;
      padding: 6rem 2rem 2rem;
      gap: 1.5rem;
      transform: translateX(100%);
      visibility: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border-left: 1px solid rgba(212, 168, 83, 0.2);
      z-index: 1200;
    }

    .nav-links.open {
      transform: translateX(0);
      visibility: visible;
    }

    .nav-link {
      font-size: 0.9rem;
      padding: 0.5rem 0;
    }
  }
</style>
