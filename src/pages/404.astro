---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { Picture } from "astro:assets";
import bokehBg from "../assets/images/composition/bokeh_bg.png";

const title = "Error 404 | Página no encontrada | Par Biomagnético";
const description =
    "Parece que el par magnético que buscas no está en resonancia. Regresa al inicio para encontrar el equilibrio.";
---

<BaseLayout {title} {description}>
    <main class="error-page">
        <section class="hero-404">
            <Picture
                src={bokehBg}
                formats={["avif", "webp"]}
                widths={[720, 1280, 1920]}
                sizes="100vw"
                alt="Fondo de energía y bienestar"
                class="bokeh-bg"
                loading="eager"
            />
            <div class="hero-overlay"></div>

            <Nav />

            <div class="error-content">
                <h1 class="error-code">404</h1>
                <div class="divider"></div>
                <h2 class="error-title">Resonancia no encontrada</h2>
                <p class="error-message">
                    El equilibrio se ha desplazado. La página que buscas no
                    existe o ha sido movida a otra órbita bionergética.
                </p>
                <div class="actions">
                    <a href="/" class="btn-primary">Volver al Centro</a>
                    <a href="/blog" class="btn-secondary">Explorar el Blog</a>
                </div>
            </div>
        </section>

        <Footer />
    </main>
</BaseLayout>

<style>
    .error-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .hero-404 {
        position: relative;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
        min-height: 80vh;
        padding-top: 100px;
    }

    .bokeh-bg {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        z-index: 1;
        background: linear-gradient(
            to bottom,
            rgba(10, 10, 12, 0.4) 0%,
            rgba(30, 58, 47, 0.7) 100%
        );
    }

    .error-content {
        position: relative;
        z-index: 10;
        max-width: 600px;
        background: rgba(10, 12, 11, 0.3);
        backdrop-filter: blur(20px);
        padding: 3rem;
        border-radius: 2rem;
        border: 1px solid rgba(212, 168, 83, 0.2);
        box-shadow: 0 40px 100px rgba(0, 0, 0, 0.5);
    }

    .error-code {
        font-family: "Outfit", sans-serif;
        font-size: 6rem;
        font-weight: 700;
        color: #d4a853;
        line-height: 1;
        margin-bottom: 1rem;
        text-shadow: 0 0 40px rgba(212, 168, 83, 0.3);
    }

    .divider {
        width: 60px;
        height: 3px;
        background: linear-gradient(to right, #d4a853, #4ade80);
        margin: 1.5rem auto;
        border-radius: 2px;
    }

    .error-title {
        font-family: "Playfair Display", Georgia, serif;
        font-size: 2rem;
        color: #fff;
        margin-bottom: 1rem;
        font-weight: 400;
    }

    .error-message {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.6;
        margin-bottom: 2.5rem;
    }

    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary {
        background: #d4a853;
        color: #000;
        padding: 0.8rem 2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        border: 1px solid #d4a853;
    }

    .btn-primary:hover {
        background: #e8c278;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(212, 168, 83, 0.2);
    }

    .btn-secondary {
        background: transparent;
        color: #fff;
        padding: 0.8rem 2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        border-color: #d4a853;
        color: #d4a853;
        background: rgba(212, 168, 83, 0.05);
    }

    @media (max-width: 640px) {
        .error-code {
            font-size: 4rem;
        }
        .error-title {
            font-size: 1.5rem;
        }
        .error-content {
            padding: 2rem 1.5rem;
        }
    }
</style>
