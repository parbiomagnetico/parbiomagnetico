---
import BaseLayout from "../layouts/BaseLayout.astro";
import EnergyComposition from "../components/EnergyComposition.astro";
import GlobalService from "../components/GlobalService.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import Certifications from "../components/Certifications.astro";
import content from "../data/content.json";
import { Picture } from "astro:assets";
import type { ImageMetadata } from "astro";

import geneticStructureImg from "../assets/images/cards/genetic-structure.png";
import simulationImpactImg from "../assets/images/cards/simulation-impact.png";
import resonanceNodesImg from "../assets/images/cards/resonance-nodes.png";

// Mapeo de imágenes para resolver las rutas del JSON
const imageMap: Record<string, ImageMetadata> = {
  "/images/cards/genetic-structure.png": geneticStructureImg,
  "/images/cards/simulation-impact.png": simulationImpactImg,
  "/images/cards/resonance-nodes.png": resonanceNodesImg,
};

const PAGE_TITLE =
  "Par Biomagnético a Distancia y Presencial en Monzón | Salud Integral";
const PAGE_DESCRIPTION =
  "Especialista en Par Biomagnético. Tratamientos a distancia para España y Latinoamérica, y consultas presenciales en Monzón (Huesca). Recupera tu equilibrio y bienestar integral.";
---

<BaseLayout title={PAGE_TITLE} description={PAGE_DESCRIPTION}>
  <main>
    <!-- Hero Section - Composición Visual Completa -->
    <EnergyComposition />

    <!-- Navegación -->
    <Nav currentPage="inicio" />

    <!-- Content Sections (Píldoras) - Diseño Orgánico -->
    <div id="content-sections" class="content-sections">
      {
        content.sections.map((section, index) => (
          <section
            class={`story-section ${index % 2 === 0 ? "align-left" : "align-right"}`}
          >
            <div class="section-content">
              <span class="concept-badge">{section.concept}</span>
              <h2 class="section-title">{section.title}</h2>
              {section.pill && <p class="section-text">{section.pill}</p>}
              {section.detail && <p class="section-detail">{section.detail}</p>}

              {section.items && (
                <ul class="items-list">
                  {section.items.map((item) => (
                    <li class="item">
                      <div class="item-header">
                        <div class="item-dot" />
                        <span class="item-label">{item.label}</span>
                      </div>
                      <p class="item-desc">{item.desc}</p>
                    </li>
                  ))}
                </ul>
              )}
            </div>

            <div class="section-visual">
              <div class="visual-glow" />
              <Picture
                src={imageMap[section.image]}
                formats={["avif", "webp"]}
                widths={[400, 600, 800]}
                sizes="(max-width: 900px) 100vw, 50vw"
                alt={`${section.title} - Terapia de Par Biomagnético`}
                class="visual-img"
                loading="lazy"
              />
            </div>
          </section>
        ))
      }
    </div>
    <!-- Servicio Global -->
    <GlobalService />

    <!-- Autoridad y Divulgación -->
    <section class="authority-section">
      <div class="authority-content">
        <span class="authority-badge">Liderazgo y Conocimiento</span>
        <h2 class="authority-title">El Mayor Portal de Par Biomagnético</h2>
        <p class="authority-text">
          Con el catálogo más extenso de artículos especializados, estudios de
          casos y guías de salud bioenergética, nos consolidamos como el
          referente número uno en divulgación de Biomagnetismo en habla hispana.
        </p>
        <div class="stats-grid">
          <div class="stat-item">
            <span class="stat-value">+50</span>
            <span class="stat-label">Artículos Expertos</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">100%</span>
            <span class="stat-label">Información Verificada</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">Global</span>
            <span class="stat-label">Referente en Divulgación</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <Footer />
  </main>
</BaseLayout>

<style>
  /* Secciones de contenido */
  .content-sections {
    position: relative;
    z-index: 10;
    background: linear-gradient(
      to bottom,
      #2c2416 0%,
      #1e3a2f 30%,
      #1a2e26 60%,
      #0f1f1a 100%
    );
  }

  .story-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
    padding: 2.5rem 4rem;
    position: relative;
    gap: 4rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .story-section::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at var(--gradient-pos, 30% 50%),
      rgba(212, 168, 83, 0.08) 0%,
      transparent 60%
    );
    pointer-events: none;
  }

  .story-section.align-left {
    flex-direction: row;
    --gradient-pos: 20% 50%;
  }

  .story-section.align-right {
    flex-direction: row-reverse;
    --gradient-pos: 80% 50%;
  }

  .section-content {
    flex: 1;
    max-width: 600px;
    padding: 2.25rem;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.03) 0%,
      rgba(255, 255, 255, 0.01) 100%
    );
    border: 1px solid rgba(212, 168, 83, 0.15);
    border-radius: 1rem;
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 2;
  }

  .section-content::before {
    content: "";
    position: absolute;
    left: 0;
    top: 2rem;
    bottom: 2rem;
    width: 3px;
    background: linear-gradient(
      to bottom,
      transparent,
      #d4a853,
      #4ade80,
      transparent
    );
    border-radius: 2px;
  }

  /* Visuales */
  .section-visual {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .visual-img {
    width: 100%;
    max-width: 500px;
    height: auto;
    /* Create a smooth fade into the background */
    mask-image: radial-gradient(circle at center, black 40%, transparent 95%);
    -webkit-mask-image: radial-gradient(
      circle at center,
      black 40%,
      transparent 95%
    );

    /* Blend the dark parts with the background */
    mix-blend-mode: screen;

    /* Remove harsh borders */
    transition:
      transform 0.5s ease,
      filter 0.5s ease;
    filter: contrast(1.1) brightness(1.1);
  }

  /* Add a stronger glow behind to support the blended image */
  .visual-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle,
      rgba(212, 168, 83, 0.15) 0%,
      transparent 60%
    );
    z-index: -1;
    filter: blur(40px);
    opacity: 0.6;
  }

  .story-section:hover .visual-img {
    transform: scale(1.05);
    filter: contrast(1.2) brightness(1.2);
  }

  /* Badge del concepto */
  .concept-badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: #d4a853;
    background: rgba(212, 168, 83, 0.1);
    padding: 0.4rem 1rem;
    border-radius: 2rem;
    margin-bottom: 1rem;
    border: 1px solid rgba(212, 168, 83, 0.2);
  }

  /* Título de sección */
  .section-title {
    font-size: clamp(1.8rem, 3vw, 2.5rem);
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    background: linear-gradient(135deg, #ffffff 0%, #d4a853 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Texto principal */
  .section-text {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  /* Detalle técnico */
  .section-detail {
    font-size: 0.9rem;
    color: rgba(74, 222, 128, 0.9);
    font-style: italic;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    line-height: 1.6;
  }

  /* Lista de items */
  .items-list {
    list-style: none;
    padding: 0;
    margin-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .item {
    padding-left: 1.5rem;
    position: relative;
  }

  .item-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.4rem;
  }

  .item-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: linear-gradient(135deg, #d4a853, #4ade80);
    box-shadow: 0 0 10px rgba(212, 168, 83, 0.5);
  }

  .item-label {
    font-size: 0.85rem;
    font-weight: 700;
    color: #d4a853;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .item-desc {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.65);
    line-height: 1.5;
    padding-left: 1.6rem;
  }

  /* Sección de Autoridad */
  .authority-section {
    padding: 6rem 1.5rem;
    background: #0f1f1a;
    display: flex;
    justify-content: center;
    text-align: center;
    position: relative;
    border-top: 1px solid rgba(212, 168, 83, 0.1);
  }

  .authority-content {
    max-width: 800px;
    z-index: 2;
  }

  .authority-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #4ade80;
    margin-bottom: 1.5rem;
  }

  .authority-title {
    font-family: "Playfair Display", Georgia, serif;
    font-size: clamp(2rem, 5vw, 3.2rem);
    color: #d4a853;
    margin-bottom: 2rem;
    line-height: 1.1;
  }

  .authority-text {
    font-size: 1.15rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin-bottom: 4rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    font-family: "Outfit", sans-serif;
  }

  .stat-label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  /* Responsivo */
  @media (max-width: 900px) {
    .story-section,
    .story-section.align-left,
    .story-section.align-right {
      flex-direction: column;
      padding: 3rem 1.5rem !important;
      gap: 2rem;
    }

    .section-content {
      max-width: 100%;
    }

    .section-visual {
      order: -1;
    }

    .section-title {
      font-size: 1.6rem;
    }

    .site-footer {
      padding: 2rem 0 !important;
    }
  }
</style>
